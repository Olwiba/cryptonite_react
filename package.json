{
  "name": "Cryptonite",
  "version": "1.0.0",
  "description": "Easily encrypt and decrypt messages within seconds.",
  "main": "index.js",
  "scripts": {
    "start": "budo ./client/index.js -d --serve bundle.js --live --pushstate",
    "build": "browserify ./client/index.js -o bundle.js -g uglifyify",
    "test": "browserify tests/test.js | node | tap-spec",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olwiba/Cryptonite"
  },
  "author": "olwiba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olwiba/Cryptonite/issues"
  },
  "homepage": "https://github.com/olwiba/Cryptonite",
  "dependencies": {
    "encrypter": "^1.0.0-beta",
    "react-router": "^2.5.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.2.0",
    "gh-pages": "^0.11.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
